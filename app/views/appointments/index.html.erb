
<div class="container">
  <div class="page-header">
    <%= link_to new_appointment_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New appointment
    <% end %>
    <h1>Listing appointment</h1>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Tutor</th>
          <th>Subject</th>
          <th>Student</th>
          <th>Description</th>
          <th colspan="3"></th>
              <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @appointments) do |appointment| %>
              <td><%= appointment.tutor.name %></td>
              <td><%= appointment.subject.name %></td>
              <td><%= appointment.student.name %></td>
              <td><%= appointment.description %></td>

              <td><%= link_to 'Show', appointment %></td>
              <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
              <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
