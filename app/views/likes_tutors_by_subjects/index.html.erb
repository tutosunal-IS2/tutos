
<p id="notice"><%= notice %></p>

<div class="container">
  <div class="page-header">
    <%= link_to new_likes_tutors_by_subject_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Monitoria
    <% end %>
    <%= link_to schedules_path, class: 'btn btn-warning' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Add Schedule
    <% end %>
    <h1>Listing monitoria</h1>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
              <th>Tutor</th>
              <th>Subject</th>
              <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @likes_tutors_by_subjects) do |likes_tutors_by_subject| %>
              <td><%= likes_tutors_by_subject.tutor.name %></td>
              <td><%= likes_tutors_by_subject.subject.name %></td>
              <td><%= link_to 'Show', likes_tutors_by_subject %></td>
              <td><%= link_to 'Edit', edit_likes_tutors_by_subject_path(likes_tutors_by_subject) %></td>
              <td><%= link_to 'Destroy', likes_tutors_by_subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>