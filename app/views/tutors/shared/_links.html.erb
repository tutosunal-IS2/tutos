<body style="color: black" font-weight="bold" id="Sign">
<%- if controller_name != 'sessions' %>
  <b><%= link_to "Log in", new_session_path(resource_name), {:style=>'color:#000000;', :class => "css_class"} %><b><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <b><%= link_to "Registrarse", new_registration_path(resource_name), {:style=>'color:#000000;',  :class => "css_class"} %><b><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <b><%= link_to "Olvido su contraseÃ±a?",  new_password_path(resource_name), {:style=>'color:#000000;', :class => "css_class"} %><b><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <b><%= link_to "No recibio instrucciones para confirmar su cuenta?", new_confirmation_path(resource_name), {:style=>'color:#000000;', :class => "css_class"} %><b><br /><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <b><%= link_to "No recibio instrucciones de desbloqueo?", new_unlock_path(resource_name), {:style=>'color:#000000;', :class => "css_class"} %><b><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <b><%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><b><br />
  <% end -%>
<% end -%>
</body>
