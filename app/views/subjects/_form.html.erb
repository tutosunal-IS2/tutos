<%= simple_form_for(@subject) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :faculty %>
  </div>

  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <div class="form-inputs">
    <%= f.input :objective %>
  </div>

  <div class="form-inputs">
    <%= f.input :theme %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
